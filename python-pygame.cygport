ORIG_PN="pygame"
inherit distutils

NAME="python-pygame"
VERSION=1.9.1
RELEASE=4
CATEGORY="Python"
SUMMARY="Python SDL game platform"
DESCRIPTION="Pygame is a set of Python modules designed for writing games.
It is written on top of the excellent SDL library. This allows you to create
fully featured games and multimedia programs in the python language."
HOMEPAGE="http://www.pygame.org/"
SRC_URI="http://www.pygame.org/ftp/${ORIG_PN}-${PV}release.tar.gz"
PATCH_URI="1.9.1-cygwin.patch
           1.9.1-camera-v4l-linux.patch"

SRC_DIR="${ORIG_PN}-${PV}release"

src_compile() {
	lndirs
	cd ${B}
	yes | distutils_compile
}
